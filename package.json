{
  "name": "htown",
  "private": true,
  "workspaces": ["client", "server", "shared"],
  "scripts": {
    "dev": "concurrently -n client,server -c cyan,magenta 'npm:dev --workspace client' 'npm:dev --workspace server'",
    "build": "npm run build --workspace shared && npm run build --workspace server && npm run build --workspace client",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "npm run test --workspace shared && npm run test --workspace server"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "tsx": "^4.15.7",
    "typescript": "^5.5.4"
  }
}
